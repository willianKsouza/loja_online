generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Roles {
  USER
  ADMIN
  EMPLOYEE
}

enum StatusAccount {
  INACTIVE
  ACTIVE
  BANNED
}

model Users {
  id               String         @id @unique
  email            String         @unique
  name             String
  password         String
  cpf              String         @unique
  nickName         String
  phone            String
  birthDate        String
  registrationDate DateTime       @default(now())
  lastLogin        DateTime
  accountStatus    StatusAccount @default(INACTIVE)
  accessLevel      Roles         @default(USER)
  usersAdress      UsersAdress[]
}

model UsersAdress {
  id               String   @id
  userId           String
  street           String
  number           String
  complement       String
  neighborhood     String
  city             String
  state            String
  cep              String
  registrationDate DateTime
  Users            Users    @relation(fields: [userId], references: [id])
}

model Products {
  id             String   @id
  name           String   @unique
  description    String
  category       String
  price          Float
  promotion      Boolean
  discount       Int
  brand          String
  model          String
  specifications Json
  images         String[]
  stock          Int
}
